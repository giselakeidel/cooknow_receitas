<%= form_for(@recipe) do |f| %>
  <p>
    <%= f.label :Nome %></br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Ingredientes %></br>
    <%= f.text_area :stuff, cols: 40, rows: 10 %>
  </p>
  <p>
    <%= f.label :Calorias %></br>
    <%= f.number_field :calories %>
  </p>
  <p>
    <%= f.label :Modo_de_Preparo %></br>
    <%= f.text_area :prepare_mode, cols: 40, rows: 10 %>
  </p>
  <p>
    <%= f.submit %>
    <%= link_to "Cancel", root_path %>
  </p>
<% end %>