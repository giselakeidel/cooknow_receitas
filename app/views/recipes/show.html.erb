 <article>
  <header>
    <h3><%= @recipe.name %></h3>
        <%= imagem(@recipe) %>
  </header>
 
  <p>
    <i><b>Tipo:</b></i> <%= @recipe.kind %>
  </p>
  <p>
    <i><b>Ingredientes:</b></i> <%= @recipe.stuff %>
  </p>
  <p>
    <i><b>Calorias:</b></i> <%= @recipe.calories %>
  </p>
  <p>
    <i><b>Modo de Preparo:</b></i> <%= @recipe.prepare_mode %>
  </p>
   <p>
    <i><b>Porções:</b></i> <%= @recipe.portion %>
  </p>
   <p>
    <i><b>Tempo de Preparo:</b></i> <%= @recipe.duration %> min
  </p>
</article>

<div class="btn-group" role="group" aria-label="Exemplo básico">
  <button type="button" class="btn btn-secondary"><%= link_to "Home", recipes_path, class:"btn btn-primary" %></button>
  <button type="button" class="btn btn-secondary"><%= link_to "Editar Receita", edit_recipe_path(@recipe), class:"btn btn-warning" %></button>
  <button type="button" class="btn btn-secondary"><%= link_to "Deletar Receita", recipe_path(@recipe), method: :delete, class:"btn btn-danger"%></button>
</div>

