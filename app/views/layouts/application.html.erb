<!DOCTYPE html>
<html>
  <head>
    <title>CooknowReceitas</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  
  <body>
    <%= nav_bar brand: "CookNow", brand_link: root_url do %>
      <%= menu_group do %>
        <%= menu_item "Nova Receita", new_recipe_path %>
      <% end %>
      <%= form_tag recipes_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "navbar-form", placeholder: "Encontre uma receita" %>
          <%= submit_tag "Buscar Receita", class: "btn btn-primary" %>
        <% end %>
      <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
